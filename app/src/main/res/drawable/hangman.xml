        android:top="240dp" />

    <item
        android:id="@+id/right_foot"
        android:width="100dp"
        android:height="110dp"
        android:drawable="@drawable/right_foot"
        android:left="40dp"
        android:top="435dp" />

    <item
        android:id="@+id/left_foot"
        android:width="100dp"
        android:height="110dp"
