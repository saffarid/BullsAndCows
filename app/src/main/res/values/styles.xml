<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.BullsCows" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/secondary</item>
        <item name="colorAccent">@color/text</item>
        <item name="android:textColorPrimary">@color/text</item>
        <item name="android:windowBackground">@color/primary</item>
    </style>
    <style name="screen">
<!--        <item name="android:background">@color/primary</item>-->
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="fragment">
        <item name="android:background">@drawable/layout_bgr</item>
<!--        <item name="android:layout_height">match_parent</item>-->
<!--        <item name="android:layout_width">match_parent</item>-->
        <item name="android:layout_margin">@dimen/layout_margin</item>
    </style>
    <style name="Button">
        <item name="android:background">@drawable/btn_backgound</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">@color/transparent</item>
    </style>
    <style name="ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">0dp</item>
    </style>
    <style name="Text">
        <item name="android:textSize">@dimen/result_text</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorHint">@color/text</item>
    </style>
    <style name="PuzzleNumberField" parent="Text">
        <item name="android:textSize">@dimen/puzzle_text</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="ResText" parent="Text">
        <item name="android:padding">5dp</item>
    </style>
</resources>